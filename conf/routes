# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /                             controllers.HomeController.index
GET        /siginup/index                    controllers.SignUpController.initialize
GET        /signin/twitter               controllers.TwitterOAuthController.signIn
GET        /signin_callback/twitter        controllers.TwitterOAuthController.signInCallback
GET        /signin/github                 controllers.GithubOAuthController.signIn
GET        /signin_callback/github         controllers.GithubOAuthController.signInCallback
GET        /signup/git           controllers.SignUpController.linkGit
GET        /signup/sns           controllers.SignUpController.linkSNS
GET        /signup/complete           controllers.SignUpController.complete
GET         /summary/index      controllers.SummaryController.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)
